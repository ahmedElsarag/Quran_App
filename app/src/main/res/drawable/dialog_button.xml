<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90.0" android:endColor="@color/dialog_gradient_end" android:startColor="@color/dialog_gradient_start" />
            <stroke android:width="@dimen/border" android:color="@color/black_border" />
            <corners android:radius="@dimen/radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270.0" android:endColor="@color/dialog_gradient_end" android:startColor="@color/dialog_gradient_start" />
            <stroke android:width="@dimen/border" android:color="@color/black_border" />
            <corners android:radius="@dimen/radius" />
        </shape>
    </item>
</selector>