<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ajzaa_relativeLayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/read_quran_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ajzaa_textView_num"
        android:layout_width="46dp"
        android:layout_height="@dimen/index_listView_item_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:gravity="center"
        android:text=""
        android:textColor="@color/read_quran_background"
        android:textSize="@dimen/number" />

    <TextView
        android:id="@+id/ajzaa_imageView_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_half"
        android:layout_toLeftOf="@id/ajzaa_textView_num"
        android:text="الجزءالاول"
        android:textSize="20sp"
        android:textColor="@color/black_background"
        />

    <TextView
        android:id="@+id/ajzaa_textView_page"
        android:layout_width="46dp"
        android:layout_height="@dimen/index_listView_item_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:gravity="center"
        android:text=""
        android:textColor="@color/read_quran_background"
        android:textSize="@dimen/number" />

    <ImageView
        android:id="@+id/ajzaa_imageView_marker"
        android:layout_width="15dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12.0dip"
        android:layout_toRightOf="@id/ajzaa_textView_page"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/index_marker" />
</RelativeLayout>