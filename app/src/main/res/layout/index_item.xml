<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/index_relativeLayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/read_quran_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/index_txt_num"
        android:layout_width="46dp"
        android:layout_height="@dimen/index_listView_item_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:gravity="center"
        android:text=""
        android:textColor="@color/read_quran_background"
        android:textSize="@dimen/number" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="94dp"
        android:layout_height="@dimen/index_listView_item_height"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_half"
        android:layout_toLeftOf="@id/index_txt_num"
        android:textSize="21sp"
        android:gravity="center"
        android:textColor="@color/black_background"
        android:text="الفاتحة"/>

    <TextView
        android:id="@+id/txt_num_page"
        android:layout_width="46dp"
        android:layout_height="@dimen/index_listView_item_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:gravity="center"
        android:text=""
        android:textColor="@color/read_quran_background"
        android:textSize="@dimen/number" />

    <ImageView
        android:id="@+id/img_soura_type"
        android:layout_width="40dp"
        android:layout_height="@dimen/index_listView_item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_toRightOf="@id/txt_num_page"
        android:src="@drawable/none" />



    <ImageView
        android:id="@+id/img_marker"
        android:layout_width="15dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/img_soura_type"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/index_marker" />
</RelativeLayout>