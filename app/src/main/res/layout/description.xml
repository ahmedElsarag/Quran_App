<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black_background"
    android:id="@+id/description_relativeLayout"
    android:layout_alignParentTop="true"
    android:layout_height="@dimen/menu_icon"
    android:layout_width="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/description_textView_pageNum"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="55"
        android:textColor="@color/white"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/description_textView_juz"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="الجزء الثالث"
        android:textColor="@color/white"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/description_textView_sura"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="البقره"
        android:textColor="@color/white"
        android:textSize="@dimen/text" />
</RelativeLayout>